<% include ../partials/header %>
<div class="row">
    <h1 class="form-title">Edit <%=camp.name%></h1>
    <div class="form">
        <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
        <div class="form-group">
             <label for="campname">Camp Name</label>
            <input class="form-control" type="text" value="<%= camp.name %>" name="camp[name]" id="campname">
        </div>
       <div class="form-group">
            <label for="cost">Price Per Night</label> 
            <input class="form-control" type="number" value="<%= camp.price %>" name="camp[price]" min="0.01" step="0.01" id="cost">
        </div>
        <div class="form-group"> 
            <label for="location">Location</label>
           <input class="form-control" type="text" value="<%= camp.location.address %>" name="loc" id="location">
        </div>
        <div class="form-group">
             <label for="image">Image URL</label>
           <input class="form-control" type="text" value="<%= camp.image %>" name="camp[image]" id="image">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" rows="3" name="camp[desc]"><%= camp.desc %></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
        </form>
        
        <a href="/campgrounds/<%=camp._id%>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>