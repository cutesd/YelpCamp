<% include ../partials/header %>
<div class="row">
    <h1 class="form-title">Edit <%=camp.name%></h1>
    <div class="form">
        <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="camp[name]" value="<%=camp.name%>">
        </div>
        <div class="form-group"> 
           <input class="form-control" type="number" value="<%=camp.price%>" name="price" min="0.01" step="0.01">
        </div>
       <div class="form-group"> 
           <input class="form-control" type="text" name="camp[image]" value="<%=camp.image%>">
        </div>
        <div class="form-group"> 
            <input class="form-control" type="text" name="camp[desc]" value="<%=camp.desc%>">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
        </form>
        
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>