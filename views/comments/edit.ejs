<% include ../partials/header %>
<div class="row">
    <h1 class="form-title">Edit Comment</h1>
    <div class="form">
        
        <form action="/campgrounds/<%=camp_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
           <div class="form-group"> 
                <textarea class="form-control" rows="3" name="comment[text]"><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        
        <a href="/campgrounds/<%=camp_id%>">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>