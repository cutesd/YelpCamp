<% include ../partials/header %>
<div class="row">
    <h1 class="form-title">Add New Comment to <br><%=camp.name%> Campground</h1>
    <div class="form">
        
        <form action="/campgrounds/<%=camp._id%>/comments" method="POST">
           <div class="form-group"> 
               <textarea class="form-control" rows="3" placeholder="Comment" name="comment[text]"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        
        <a href="/campgrounds">Back to Campgrounds</a>
    </div>
</div>
<% include ../partials/footer %>