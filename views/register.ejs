<% include partials/header %>
<div class="row">
    <h1 class="form-title">Sign Up Form</h1>
    <div class="form">
    <form action="/register" method="POST">
        <div class="form-group">
            <label for="un">Username</label>
            <input class="form-control" type="text" id="un" placeholder="Username" name="username">
        </div>
        <div class="form-group">    
            <label for="pw">Password</label>
            <input class="form-control" type="password" id="pw" placeholder="Password" name="password">
        </div>
        <div class="form-group">
            <label for="ac">Admin Code:</label>
            <input class="form-control" type="text" placeholder="Enter Admin code if you have one" name="admincode">
            <small id="fileHelp" class="form-text text-muted">*Optional: only enter if you are an admin</small>
        </div>
        <div class="form-group">    
            <input class="btn btn-lg btn-primary btn-block" type="submit">
        </div>
    </form>
    </div>
</div>
<% include partials/footer %>